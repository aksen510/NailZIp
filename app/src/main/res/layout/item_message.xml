<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/msgItem_linearlayout_main">

    <LinearLayout
        android:id="@+id/msgItem_linearlayout_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/msgItem_img_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/msgItem_txt_name"
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_msgItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메세지 내용"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_msgItem_readCounter_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="9dp"
                android:textColor="@color/maincolor"
                android:visibility="invisible"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/txt_msgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.09.09 09:09"
                android:textSize="9dp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/txt_msgItem_readCounter_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="9dp"
                android:textColor="@color/maincolor"
                android:visibility="invisible"
                android:layout_margin="2dp"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>