        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        android:background="#EBEBEB"
        app:layout_constraintEnd_toEndOf="parent"
